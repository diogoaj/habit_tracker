datasource db {
  provider = "sqlite" 
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  habits      Habit[]
}

model Habit {
    id          Int      @id @default(autoincrement())
    name        String
    days        Date[]
    userId      Int 
    user        User @relation(fields: [userId], references: [id])
}

model Date {
    id          Int      @id @default(autoincrement())
    day         Int
    month       Int 
    year        Int
    habitId     Int 
    habit       Habit @relation(fields: [habitId], references: [id])
}

